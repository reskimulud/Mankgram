<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Colors -->
    <color name="colorBase">#EEEEEE</color>
    <color name="colorPrimary">#191645</color>
    <color name="colorAccent">#43C6AC</color>
    <color name="colorText">#121212</color>
    <color name="colorTextSecondary">#292929</color>

    <color name="colorPrimaryVariant">#262168</color>

    <!-- Base application theme. -->
    <style name="Theme.Mankgram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorBase</item>
        <item name="backgroundColor">@color/colorBase</item>

        <!-- Transition Animation -->
        <item name="android:windowActivityTransitions">true</item>-->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <!-- App Bar style -->
    <style name="expandedBarTextStyle" parent="Theme.Mankgram">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!-- On Boarding Page -->
    <style name="Theme.OnBoardingStyle" parent="Theme.Mankgram">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
</resources>